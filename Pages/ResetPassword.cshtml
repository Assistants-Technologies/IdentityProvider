@page
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<form id="reset-password-form">
    <div class="space-y-4">
        <p class="text-sm text-gray-600 mb-4">
            Enter your new password for the account.
        </p>
        <div>
            <label for="reset-password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
            <input type="password" id="reset-password" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none input-focus transition duration-200" placeholder="••••••••" required />
        </div>
        <div>
            <label for="reset-confirm" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
            <input type="password" id="reset-confirm" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none input-focus transition duration-200" placeholder="••••••••" required />
        </div>
        <button type="submit" class="w-full btn-primary text-white py-2 px-4 rounded-lg font-medium">
            Reset Password
        </button>
    </div>
</form>

<div class="mt-6 text-center text-sm">
    <a href="/Login" class="font-medium text-aiBlue hover:underline">Back to sign in</a>
</div>