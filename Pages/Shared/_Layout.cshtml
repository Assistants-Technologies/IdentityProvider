<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] â€“ @(Environment.GetEnvironmentVariable("COMPANY_NAME") ?? "YourCompany") Identity</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        aiBlue: '#3B82F6',
                        aiDarkBlue: '#2563EB',
                        aiPink: '#EC4899',
                        aiViolet: '#8B5CF6',
                        aiBlack: '#111827',
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9fafb;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
        }
        
        .gradient-text {
            background: linear-gradient(90deg, #3B82F6 0%, #8B5CF6 50%, #EC4899 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
        
        .card-glow {
            box-shadow: 0 10px 30px -10px rgba(59, 130, 246, 0.3);
        }
        
        .btn-primary {
            background: linear-gradient(90deg, #3B82F6 0%, #2563EB 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px -5px rgba(59, 130, 246, 0.4);
        }
        
        .input-focus:focus {
            border-color: #3B82F6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        }
        
        .animate-float {
            animation: float 6s ease-in-out infinite;
        }
        
        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-15px); }
            100% { transform: translateY(0px); }
        }
    </style>
</head>
<body class="gradient-bg min-h-screen flex items-center justify-center p-4">
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-aiBlue via-aiViolet to-aiPink"></div>
    
    <!-- Main Container -->
    <div class="w-full max-w-md relative">
        <!-- Floating decorative elements -->
        <div class="absolute -top-20 -left-20 w-40 h-40 rounded-full bg-aiBlue opacity-10 blur-xl animate-float"></div>
        <div class="absolute -bottom-20 -right-20 w-40 h-40 rounded-full bg-aiPink opacity-10 blur-xl animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/3 right-10 w-20 h-20 rounded-full bg-aiViolet opacity-10 blur-xl animate-float" style="animation-delay: 4s;"></div>
        
        <!-- Card -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden card-glow transition-all duration-300 transform hover:scale-[1.01]">
            <!-- Header -->
            <div class="p-6 text-center border-b border-gray-100">
                <div class="flex justify-center mb-4">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-aiBlue to-aiViolet flex items-center justify-center">
                        <i class="fas fa-fingerprint text-white text-xl"></i>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-aiBlack">Assistants Identity</h1>
                <p class="text-gray-500 mt-1 text-sm">One identity for all services</p>
            </div>
            
            <!-- Dynamic Content Area -->
            <div id="content-area" class="p-6">
                @RenderBody()
            </div>
            
            <!-- Footer -->
            <div class="px-6 py-4 bg-gray-50 text-center">
                <p class="text-xs text-gray-500">By continuing, you agree to our <a href="#" class="text-aiBlue hover:underline">Terms</a> and <a href="#" class="text-aiBlue hover:underline">Privacy Policy</a>.</p>
            </div>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
